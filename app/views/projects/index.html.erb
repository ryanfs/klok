<% for project in @projects %>
<% for timeblock in project.timeblocks %>
  <div class="posts-item">
    <div class="posts-thumbnail v1">
      <h3 class="color<%= project.hex %> posts-item-title"><%= project.name %></h3>
    </div>

    <div class="posts-item-content">

      <div class="posts-item-header">
        <div class="posts-item-title-wrapper">
            <h3 class="color<%= project.hex %> posts-item-title">
              <span class="timeonlystring"><%= timeblock.start %></span> - <span class="timeonlystring"><%= timeblock.end %></span>
            </h3>
        </div>
      </div>

        <div class="posts-item-body">
          <div class="posts-item-excerpt">
              <p><%= timeblock.description %></p>
          </div>
        </div>

        <div class="posts-item-footer">
          <div>
            <span class="tag is-primary"><%= (( timeblock.end - timeblock.start) / 60).round %> minutes</span>
          </div>
        </div>

    </div>
  </div>
<% end %>
<% end %>

<% total=0 %>
<% for timeblock in project.timeblocks %>
  <% total += (( timeblock.end - timeblock.start) / 60).round %>
<% end %>

<span class="tag is-light">Minutes: <%= total %></span>
<span class="tag is-light">Hours: <%= (total / 60 ).round(2) %>
