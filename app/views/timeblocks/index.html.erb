<h1>Start the Klok!</h1>

<h2><span id="minutes">00</span>:<span id="seconds">00</span>:<span id="tens">00</span></h2>

<%= form_for @timeblock, url: {action: "create"}, html: {class: "form-group"} do |f| %>
  <%= f.label :project_id, 'Which project are you working on right now?' %>
  <br />
  <%= f.collection_select :project_id, Project.order(:name),:id,:name, include_blank: false %>
  <br />
  <%= f.text_area :description, placeholder: 'Describe this task...' %>
  <br />
  <%= f.hidden_field :start, data: {startinput: :hidden}  %>
  <%= f.submit "Start clock", data: {clock: :start} %>
  <%= f.submit "Stop clock", class: 'hidden', data: {clock: :stop} %>
<% end %>

<% @timeblocks.each do |timeblock| %>

  <p>Start: <span class="timestring"><%= timeblock.start %></span></p>
  <p>Stop: <span class="timestring"><%= timeblock.end %></span></p>
  <small><p><%= timeblock.created_at %></p></small>
  <hr />

<% end %>


